<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
  <input type="hidden" name="_id" value="{{employee._id}}">
  <div class="form-group">
    <label>*User Name/Visiting person</label>
    <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{employee.fullName}}">
    <div class="text-danger">
      {{employee.fullNameError}}</div>
  </div>

  <div class="form-group">
    <label>*Client Name</label>
    <input type="text" class="form-control" name="clientName" placeholder="Full Name" value="{{employee.clientName}}">
    <div class="text-danger">
      {{employee.fullNameError}}</div>
  </div>

  <div class="form-group">
    <label>*Email</label>
    <input type="text" class="form-control" name="email" placeholder="Email" value="{{employee.email}}">
    <div class="text-danger">
      {{employee.emailError}}</div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <label>*Mobile</label>
      <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{employee.mobile}}">
    </div>
    {{!-- <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{employee.city}}">
        </div> --}}
  </div>

  <div class="form-group">
    <label>*Prospective Project Name</label>
    <input type="text" class="form-control" name="projectName" placeholder="project Name" value="{{employee.projectName}}">    
  </div>


<script>
  $( function() {
    $( "#datepicker" ).datepicker();
  } );
  </script>
<div class="form-group">
    <label>*Date</label>
    <input type="text" class="form-control"id="datepicker" name="date" placeholder="date" value="{{employee.date}}">    
  </div>



    <div class="form-group">
      <label>*Type of work</label>
      <div style="font-size: 13px;padding-left:15px">
        <div class="radio">
          <label><input type="radio" name="typeOfWork" value="{{employee.typeOfWork}}" disabled>Event</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="typeOfWork" value="{{employee.typeOfWork}}" disabled>Activation</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="typeOfWork" value="{{employee.typeOfWork}}" disabled>Gift Item</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="typeOfWork" value="{{employee.typeOfWork}}" disabled>Other-(able to write)</label>
        </div>
      </div>
    </div>
  

    <div class="form-group">
      <label>*Type of Submission</label>
      <div style="font-size: 13px;padding-left:15px">
        <div class="radio">
          <label><input type="radio" name="optradio" value="{{employee.typeOfSubmission}}"disabled>PPT Technical</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="optradio" value="{{employee.typeOfSubmission}}"disabled>PPT Financial</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="optradio" value="{{employee.typeOfSubmission}}"disabled>Sample</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="optradio" value="{{employee.typeOfSubmission}}"disabled>Financial Quotation</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="optradio" value="{{employee.typeOfSubmission}}"disabled>Other-(able to write)</label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label>*Need to tag Other Department</label>
      <div style="font-size: 13px;padding-left:15px">
        <div class="radio">
          <label><input type="radio" name="optradio" value="{{employee.otherDep}}"disabled>Strategic planning</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="optradio" value="{{employee.otherDep}}"disabled>Creative</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="optradio" value="{{employee.otherDep}}"disabled>Operation</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="optradio" value="{{employee.otherDep}}"disabled>Accounts</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="optradio" value="{{employee.otherDep}}"disabled>HR</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="optradio" value="{{employee.otherDep}}"disabled>Admin</label>
        </div>
        <div class="radio">
          <label><input type="radio" name="optradio" value="{{employee.otherDep}}"disabled>IT</label>
        </div>
      </div>
    </div>

<div class="form-group">
    <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
    <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> View All</a>
  </div>
</form>